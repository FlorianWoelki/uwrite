{
  "name": "uwrite",
  "version": "0.0.1",
  "license": "MIT",
  "main": "main/index.js",
  "author": "Florian Woelki",
  "description": "Take notes and capture code snippets with focus.",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite --config vite.config-electron.ts\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite -- --config vite.config-electron.ts && npm run build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder --mac --windows --linux",
    "pack": "npm run build && electron-builder --mac --windows --linux --dir",
    "clean": "rimraf dist main src/out"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@reduxjs/toolkit": "^1.9.3",
    "electron-is-dev": "^2.0.0",
    "highlight.js": "^11.7.0",
    "idb": "^7.1.1",
    "katex": "^0.15.6",
    "monaco-editor": "^0.37.0",
    "monaco-vim": "^0.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.9",
    "react-router-dom": "^6.10.0",
    "remarkable": "^2.0.1"
  },
  "devDependencies": {
    "@types/katex": "^0.11.1",
    "@types/react": "^17.0.56",
    "@types/react-dom": "^17.0.19",
    "@types/react-router-dom": "^5.3.3",
    "@types/remarkable": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "electron": "16.0.5",
    "electron-builder": "23.0.2",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.3.1",
    "typescript": "^4.9.5",
    "vite": "^2.9.15",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-svgr": "^1.1.0"
  },
  "resolutions": {
    "@types/react": "^17.0.33"
  },
  "build": {
    "appId": "com.florianwoelki.uwrite",
    "productName": "uwrite",
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
