{
  "name": "uwrite",
  "version": "0.0.0",
  "main": "main/index.js",
  "author": "Florian Woelki",
  "description": "Take notes and capture code snippets with focus.",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite --config vite.config-electron.ts\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite -- --config vite.config-electron.ts && npm run build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder --mac --windows --linux",
    "pack": "npm run build && electron-builder --mac --windows --linux --dir",
    "clean": "rimraf dist main src/out"
  },
  "dependencies": {
    "monaco-editor": "^0.31.1",
    "monaco-vim": "^0.1.19",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "^10.4.1",
    "concurrently": "^7.0.0",
    "electron": "16.0.5",
    "electron-builder": "^22.14.5",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.8",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-monaco-editor": "^1.0.10"
  },
  "build": {
    "appId": "com.florianwoelki.uwrite",
    "productName": "uwrite",
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
